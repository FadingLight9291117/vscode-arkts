{
  "name": "arkts-language-support",
  "displayName": "ArkTS Language Support",
  "description": "ArkTS (HarmonyOS) language support with syntax highlighting, code completion, hover documentation and more",
  "version": "1.0.2",
  "publisher": "cheliangzhao",
  "author": {
    "name": "Kingsoft"
  },
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/FadingLight9291117/vscode-arkts.git"
  },
  "bugs": {
    "url": "https://github.com/FadingLight9291117/vscode-arkts/issues"
  },
  "homepage": "https://github.com/FadingLight9291117/vscode-arkts#readme",
  "keywords": [
    "arkts",
    "harmonyos",
    "hongmeng",
    "ets",
    "huawei",
    "language",
    "syntax",
    "highlighting"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "ArkTs",
    "HarmonyOS",
    "OpenHarmony",
    "Programming Languages",
    "Snippets",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:arkts"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "arkts",
        "aliases": [
          "ArkTS",
          "arkts",
          "ets"
        ],
        "extensions": [
          ".ets"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/arkts-light.png",
          "dark": "./icons/arkts-dark.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "arkts",
        "scopeName": "source.arkts",
        "path": "./syntaxes/arkts.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "arkts",
        "path": "./snippets/arkts.json"
      }
    ],
    "commands": [
      {
        "command": "arkts.helloWorld",
        "title": "ArkTS: Hello World"
      },
      {
        "command": "arkts.formatDocument",
        "title": "ArkTS: Format Document"
      }
    ],
    "configuration": {
      "title": "ArkTS",
      "properties": {
        "arkts.enableAutoComplete": {
          "type": "boolean",
          "default": true,
          "description": "启用自动补全功能"
        },
        "arkts.enableHover": {
          "type": "boolean",
          "default": true,
          "description": "启用悬停提示功能"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "sharp": "^0.34.5",
    "typescript": "^5.3.3"
  }
}
