{
  "name": "arkts-language-support",
  "displayName": "ArkTS Language Support",
  "description": "ArkTS (HarmonyOS) language support with syntax highlighting, code completion, hover documentation and more",
  "version": "1.2.7",
  "publisher": "cheliangzhao",
  "author": {
    "name": "车亮召"
  },
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/FadingLight9291117/vscode-arkts.git"
  },
  "bugs": {
    "url": "https://github.com/FadingLight9291117/vscode-arkts/issues"
  },
  "homepage": "https://github.com/FadingLight9291117/vscode-arkts#readme",
  "keywords": [
    "arkts",
    "harmonyos",
    "hongmeng",
    "ets",
    "huawei",
    "language",
    "syntax",
    "highlighting"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "arkts",
        "aliases": [
          "ArkTS",
          "arkts",
          "ets"
        ],
        "extensions": [
          ".ets"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/arkts-light.png",
          "dark": "./icons/arkts-dark.png"
        }
      },
      {
        "id": "json5",
        "aliases": [
          "JSON5",
          "json5"
        ],
        "extensions": [
          ".json5"
        ],
        "filenames": [
          "oh-package.json5",
          "build-profile.json5",
          "module.json5",
          "hvigorfile.json5"
        ],
        "configuration": "./language-configuration-json5.json"
      }
    ],
    "grammars": [
      {
        "language": "arkts",
        "scopeName": "source.arkts",
        "path": "./syntaxes/arkts.tmLanguage.json"
      },
      {
        "language": "json5",
        "scopeName": "source.json5",
        "path": "./syntaxes/json5.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "arkts",
        "path": "./snippets/arkts.json"
      }
    ],
    "commands": [
      {
        "command": "arkts.helloWorld",
        "title": "ArkTS: Hello World"
      },
      {
        "command": "arkts.formatDocument",
        "title": "ArkTS: Format Document"
      }
    ],
    "configuration": {
      "title": "ArkTS",
      "properties": {
        "arkts.enableAutoComplete": {
          "type": "boolean",
          "default": true,
          "description": "启用自动补全功能"
        },
        "arkts.completion.enableKeywords": {
          "type": "boolean",
          "default": true,
          "description": "启用关键字补全（const/if/try 等）"
        },
        "arkts.completion.enableImportSnippets": {
          "type": "boolean",
          "default": true,
          "description": "启用 HarmonyOS Kit import 模板补全（@kit.* 推荐写法）"
        },
        "arkts.completion.enableLifecycleSnippets": {
          "type": "boolean",
          "default": true,
          "description": "启用生命周期回调模板补全（自定义组件/UIAbility）"
        },
        "arkts.completion.keywordMode": {
          "type": "string",
          "default": "common",
          "enum": [
            "common",
            "full",
            "arkts"
          ],
          "enumDescriptions": [
            "常用关键字（推荐，尽量贴近 ArkTS 迁移指南的约束）",
            "更完整的 TS/JS 关键字/保留字集合（更全面，可能包含 ArkTS 不推荐/不支持项）",
            "仅 ArkTS 生命周期/结构相关（最精简）"
          ],
          "description": "关键字补全范围"
        },
        "arkts.diagnostics.enable": {
          "type": "boolean",
          "default": true,
          "description": "启用/禁用 ArkTS 实时诊断（Problems 面板提示）"
        },
        "arkts.diagnostics.enableUnusedState": {
          "type": "boolean",
          "default": true,
          "description": "启用未使用的 @State 变量提示（简化规则）"
        },
        "arkts.diagnostics.enableMigrationRules": {
          "type": "boolean",
          "default": true,
          "description": "启用 TypeScript→ArkTS 迁移建议诊断（如避免 var/any/unknown 等）"
        },
        "arkts.diagnostics.severity": {
          "type": "string",
          "default": "warning",
          "enum": [
            "information",
            "warning",
            "error"
          ],
          "description": "诊断严重程度（information/warning/error）"
        },
        "arkts.enableHover": {
          "type": "boolean",
          "default": true,
          "description": "启用悬停提示功能"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "package": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "sharp": "^0.34.5",
    "typescript": "^5.3.3"
  }
}
